<div class="flex justify-end p-2 space-x-1" aria-label="Table navigation">
    <!-- Bouton précédent -->
    <button @onclick="PrevPage" disabled="@(CurrentPage == 1)"
            class="px-3 py-1 rounded-l-md border border-gray-300 bg-white text-gray-600 hover:bg-[#daf2ef] hover:text-white transition-colors disabled:opacity-50">
        ‹
    </button>

    <!-- Page actuelle -->
    <span class="px-4 py-1 border-t border-b border-gray-300 bg-[#daf2ef] text-gray-700 font-semibold">
        @CurrentPage
    </span>

    <!-- Bouton suivant -->
    <button @onclick="NextPage" disabled="@(CurrentPage == TotalPages)"
            class="px-3 py-1 rounded-r-md border border-gray-300 bg-white text-gray-600 hover:bg-[#daf2ef] hover:text-white transition-colors disabled:opacity-50">
        ›
    </button>
</div>

@code {
    [Parameter] public int TotalPages { get; set; } = 1;
    [Parameter] public int CurrentPage { get; set; } = 1;
    [Parameter] public EventCallback<int> OnPageChange { get; set; }

    private async Task PrevPage()
    {
        if (CurrentPage > 1)
        {
            CurrentPage--;
            await OnPageChange.InvokeAsync(CurrentPage);
        }
    }

    private async Task NextPage()
    {
        if (CurrentPage < TotalPages)
        {
            CurrentPage++;
            await OnPageChange.InvokeAsync(CurrentPage);
        }
    }
}
