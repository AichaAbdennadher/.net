@page "/Authentification/Inscription"
@inject UserServices userServices
@inject NavigationManager navigationManager
@inject IJSRuntime JS

<section class="min-h-screen flex flex-col justify-center bg-gray-100 dark:bg-gray-900 px-4 py-8">
    <div class="flex flex-col md:flex-row w-full max-w-5xl rounded-md shadow-2xl overflow-hidden bg-white dark:bg-gray-800 mx-auto">

        <!-- Left: Slider -->
        <div class="md:w-1/2 w-full text-white p-16 flex flex-col relative"
             style="background: linear-gradient(to top right, #50bfa2,#95dbc8);">

            <p class="text-3xl font-bold mb-4">
                Medical Solution, your partner in health!
            </p>
            <p class="text-lg mt-2">
                Save time and secure your prescriptions! With our app, doctors send their prescriptions directly
                to pharmacists, so patients receive their medications quickly and safely.
            </p>

            <div class="relative mt-10 overflow-hidden rounded-md w-full">
                <div class="flex h-72 transition-transform duration-700 ease-in-out"
                     style="@($"transform: translateX(-{CurrentIndex * 100}%);")">
                    @foreach (var img in Images)
                    {
                        <img src="@img" class="w-full h-full object-cover flex-shrink-0 mt-6" />
                    }
                </div>
            </div>
        </div>

        <!-- Right: Form -->
        <div class="md:w-1/2 w-full p-8 py-14">
            <EditForm Model="UserDTO" OnValidSubmit="Handlesubmit" class="space-y-6">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-red-500" />

                <!-- Logo -->
                <div class="w-64 mx-auto flex justify-center">
                    <img src="images/logo.png" alt="Logo" class="mb-2 w-64" />
                </div>

                <!-- INPUTS -->
                <div class="space-y-4">
                    <!-- Last Name -->
                    <input placeholder="Last Name"
                           @bind-value="UserDTO.Nom"
                           required
                           class="@InputClass" />

                    <!-- First Name -->
                    <input placeholder="First Name"
                           @bind-value="UserDTO.Prenom"
                           required
                           class="@InputClass" />

                    <!-- Email -->
                    <input type="email" placeholder="Email"
                           @bind-value="UserDTO.Email"
                           required
                           class="@InputClass" />

                    <!-- Password -->
                    <input type="password" placeholder="Password"
                           @bind-value="UserDTO.Password"
                           required
                           class="@InputClass" />

                    <!-- Phone -->
                    <input placeholder="Phone" type="tel" pattern="[0-9]*"
                           inputmode="numeric" @bind-value="UserDTO.Tel"
                           class="@InputClass" />

                    <!-- Address -->
                    <input placeholder="Address" @bind-value="UserDTO.Adresse"
                           class="@InputClass" />

                    <!-- Role -->
                    <InputSelect @bind-Value="RoleString"
                                 class="focus:ring-2 focus:ring-[#50bfa2] w-full h-12 px-3 py-2 border-none rounded-md"
                                 required>
                        <option value="">Choisir un rôle</option>
                        <option value="Medecin">Médecin</option>
                        <option value="Pharmacien">Pharmacien</option>
                    </InputSelect>

                    <!-- Speciality (Médecin) -->
                    @if (afficherSpecialite)
                    {
                        <input placeholder="Speciality"
                               @bind-value="UserDTO.Specialite"
                               class="@InputClass" />
                    }

                    <!-- Pharmacy (Pharmacien) -->
                    @if (afficherPharmacie)
                    {
                        <input placeholder="Pharmacy Name"
                               @bind-value="UserDTO.NomPharmacie"
                               class="@InputClass" />
                    }
                </div>

                <!-- Error message -->
                @if (!string.IsNullOrEmpty(Message))
                {
                    <p class="text-red-500 text-center">@Message</p>
                }

                <!-- Submit -->
                <button type="submit"
                        style="background-color:#50bfa2;"
                        class="mt-2 w-full h-12 px-3 py-2 text-white font-semibold rounded-md transition-all duration-300 hover:scale-[1.02] hover:brightness-110">
                    Sign up
                </button>

                <!-- Login link -->
                <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
                    Already have an account?
                    <a href="/Authentification/Login" style="color:#50bfa2;" class="hover:underline transition duration-300">Login here</a>
                </p>
            </EditForm>
        </div>
    </div>
</section>

@code {
    public UserDTO UserDTO { get; set; } = new UserDTO();

    private bool afficherSpecialite = false;
    private bool afficherPharmacie = false;
    private string Message;

    private int CurrentIndex = 0;
    private List<string> Images = new()
    {
        "images/ph2.png",
        "images/ph4.png",
        "images/ph6.png"
    };

    private string RoleString
    {
        get => UserDTO.Role.ToString();
        set
        {
            if (Enum.TryParse<Role>(value, out var roleEnum))
            {
                UserDTO.Role = roleEnum;
                afficherSpecialite = roleEnum == Role.Medecin;
                afficherPharmacie = roleEnum == Role.Pharmacien;
            }
        }
    }

    private string InputClass =>
        "w-full h-12 px-3 py-2 text-base border border-gray-300 rounded-md " +
        "focus:outline-none focus:ring-2 focus:ring-[#50bfa2] " +
        "dark:bg-gray-700 dark:text-gray-900 bg-white text-gray-900 transition duration-300";

    protected override void OnInitialized()
    {
        var timer = new System.Timers.Timer(3000);
        timer.Elapsed += (s, e) =>
        {
            CurrentIndex = (CurrentIndex + 1) % Images.Count;
            InvokeAsync(StateHasChanged);
        };
        timer.Start();
    }

    private async Task Handlesubmit()
    {
        var result = await userServices.Register(UserDTO);

        if (result)
            navigationManager.NavigateTo("/Authentification/Login");
        else
            Message = "Une erreur est survenue. Veuillez réessayer.";
    }
}
