@page "/Authentification/EditProfil"
@using metiers
@inject UserServices UserServices
@inject NavigationManager Navigation

<div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 p-4">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-2xl overflow-y-auto">

        <!-- Header -->
        <div class="flex items-center justify-between border-b p-4">
            <h3 class="text-lg font-semibold text-[#50bfa2]">Edit Personal Information</h3>
            <button @onclick="Cancel" class="text-gray-400 hover:text-[#50bfa2]">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M1 1l6 6m0 0l6 6M7 7l6-6M7 7l-6 6" />
                </svg>
            </button>
        </div>

        @if (IsLoading)
        {
            <div class="p-6 text-center text-gray-500">Loading...</div>
        }
        else
        {
            <EditForm Model="user" OnValidSubmit="HandleUpdate" class="px-6 py-4 space-y-4">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-red-500" />

                <!-- First Name -->
                <div>
                    <label class="block text-sm text-gray-500">First Name</label>
                    <InputText @bind-Value="user.Prenom"
                               class="w-full p-2 border rounded-lg focus:ring-[#50bfa2]" />
                </div>

                <!-- Last Name -->
                <div>
                    <label class="block text-sm text-gray-500">Last Name</label>
                    <InputText @bind-Value="user.Nom"
                               class="w-full p-2 border rounded-lg focus:ring-[#50bfa2]" />
                </div>

                <!-- Email -->
                <div>
                    <label class="block text-sm text-gray-500">Email</label>
                    <InputText @bind-Value="user.Email"
                               class="w-full p-2 border rounded-lg focus:ring-[#50bfa2]" />
                </div>
                
               
                <!-- Phone -->
                <div>
                    <label class="block text-sm text-gray-500">Phone</label>
                    <InputText @bind-Value="user.Tel"
                               class="w-full p-2 border rounded-lg focus:ring-[#50bfa2]" />
                </div>

                <!-- Address -->
                <div>
                    <label class="block text-sm text-gray-500">Address</label>
                    <InputText @bind-Value="user.Adresse"
                               class="w-full p-2 border rounded-lg focus:ring-[#50bfa2]" />
                </div>

                <!-- Pharmacy -->
                <div>
                    <label class="block text-sm text-gray-500">Pharmacy Name</label>
                    <InputText @bind-Value="user.NomPharmacie"
                               class="w-full p-2 border rounded-lg focus:ring-[#50bfa2]" />
                </div>

                <!-- Buttons -->
                <div class="flex justify-end gap-2 border-t pt-4">
                    <button type="button" @onclick="Cancel"
                            class="bg-gray-200 px-5 py-2 rounded-lg">
                        Cancel
                    </button>

                    <button type="submit"
                            class="bg-[#50bfa2] text-white px-5 py-2 rounded-lg">
                        Update
                    </button>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    private UserDTO user = new();
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        user = await UserServices.GetCurrentUser();
        IsLoading = false;
    }

    private async Task HandleUpdate()
    {
        var success = await UserServices.UpdateUser(user);

        if (success)
            Navigation.NavigateTo("/Authentification/ProfilPh");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/Authentification/ProfilPh");
    }
}
