@page "/Authentification/ListDoctors"
@using metiers
@inject NavigationManager Navigation
@inject UserServices UserServices
@inject IJSRuntime JS

<HeaderM />

<section class="bg-gray-50 dark:bg-gray-900 p-3 sm:p-5">
    <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
        <div class="bg-white dark:bg-gray-800 shadow-md sm:rounded-lg overflow-hidden">

            <div class="flex flex-col md:flex-row items-center justify-between p-4 bg-white gap-4">
                <div class="w-full md:w-1/2 relative">
                    <input type="text" @bind="SearchText"
                           placeholder="Search"
                           class="w-full bg-white border border-gray-300 text-gray-700 text-sm rounded-xl pl-11 py-2.5 shadow-sm"
                           @oninput="OnSearchChanged" />

                    <span class="absolute inset-y-0 left-3 flex items-center text-gray-500">
                        <i class="fas fa-search text-[15px]"></i>
                    </span>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th class="px-4 py-3">First Name</th>
                            <th class="px-4 py-3">Last Name</th>
                            <th class="px-4 py-3">Email Address</th>
                            <th class="px-4 py-3">Phone</th>
                            <th class="px-4 py-3">Address</th>
                            <th class="px-4 py-3">Speciality</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var user in PagedUsers)
                        {
                            <tr class="border-b">
                                <td class="px-4 py-3">@user.Prenom</td>
                                <td class="px-4 py-3">@user.Nom</td>
                                <td class="px-4 py-3">@user.Email</td>
                                <td class="px-4 py-3">@user.Tel</td>
                                <td class="px-4 py-3">@user.Adresse</td>
                                <td class="px-4 py-3">@user.Specialite</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <Pagination TotalPages="@totalPages" CurrentPage="@currentPage" OnPageChange="LoadUsers" />

        </div>
    </div>
</section>

@code {
    private List<UserDTO> Users = new();
    private string SearchText = "";

    private int currentPage = 1;
    private int pageSize = 5;
    private int totalPages => (int)Math.Ceiling((double)FilteredUsers.Count() / pageSize);

    private IEnumerable<UserDTO> FilteredUsers =>
        string.IsNullOrWhiteSpace(SearchText)
            ? Users
            : Users.Where(u =>
                u.Nom.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                u.Prenom.Contains(SearchText, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<UserDTO> PagedUsers =>
        FilteredUsers.Skip((currentPage - 1) * pageSize).Take(pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers(currentPage);
    }

    private async Task LoadUsers(int page)
    {
        currentPage = page;

        Users = await UserServices.GetDoctorsAsync();
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        currentPage = 1;
    }
}
