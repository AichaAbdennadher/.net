@page "/Ordonnances/ListOrdonnances"
@using metiers
@inject NavigationManager Navigation
@inject OrdonnanceServices OrdonnanceServices
@inject IJSRuntime JS

<HeaderM />

<section class="bg-gray-50 dark:bg-gray-900 p-3 sm:p-5">
    <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
        <div class="bg-white dark:bg-gray-800 shadow-md sm:rounded-lg overflow-hidden">

            <div class="flex flex-col md:flex-row items-center justify-between p-4 bg-white gap-4">

                <div class="w-full md:w-1/2 relative">
                    <input type="text" @bind="SearchText"
                           placeholder="Search"
                           class="w-full bg-white border border-gray-300 text-gray-700 text-sm rounded-xl pl-11 py-2.5 shadow-sm"
                           @oninput="OnSearchChanged" />

                    <span class="absolute inset-y-0 left-3 flex items-center text-gray-500">
                        <i class="fas fa-search text-[15px]"></i>
                    </span>
                </div>

                <button class="flex items-center text-white font-medium rounded-lg text-base px-4 py-2 bg-[#50bfa2] hover:bg-[#95dbc8]"
                        @onclick="CreerOrdonnance">

                    <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    Add prescription
                </button>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th class="px-4 py-3">Number</th>
                            <th class="px-4 py-3">Patient</th>
                            <th class="px-4 py-3">Creation date</th>
                            <th class="px-4 py-3">Status</th>
                            <th class="px-4 py-3" colspan="3">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var ord in PagedOrdonnances)
                        {
                            <tr class="border-b">
                                <td class="px-4 py-3">@ord.OrdID</td>
                                <td>@($"{ord.Patient.Nom} {ord.Patient.Prenom}")</td>
                                <td class="px-4 py-3">@ord.DateCreation.ToString("MM/dd/yyyy")</td>
                                <td class="px-4 py-3">
                                    <span class="px-2 py-1 rounded text-white
                                            @(ord.Statut == Statut.Delivree ? "bg-green-500" : @ord.Statut == Statut.PartiellementDelivree ? "bg-green-300" :
                                                                                                                      ord.Statut == Statut.EnAttente ? "bg-yellow-500" :
                                                                                                                      "bg-red-500")">
                                        @ord.Statut
                                    </span>
                                </td>

                                <td class="px-4 py-3 flex space-x-2">

                                    <span class="cursor-pointer px-2 py-1 rounded hover:bg-gray-100"
                                          @onclick="() => Edit(ord.OrdID)">
                                        <i class='bx bx-edit text-gray-500 text-2xl'></i>
                                    </span>

                                    <span class="cursor-pointer px-2 py-1 rounded hover:bg-gray-100"
                                          @onclick="() => Delete(ord.OrdID)">
                                        <i class='bx bxs-trash text-red-500 text-2xl'></i>
                                    </span>

                                    <span class="cursor-pointer px-2 py-1 rounded hover:bg-gray-100"
                                          title="Envoyer l’ordonnance"
                                          @onclick="() => Send(ord)">
                                        <i class='bx bx-mail-send text-2xl'
                                           style="color:@(ord.envoyee ? "#d1d1d1" : "#50bfa2")">
                                        </i>
                                    </span>



                                    <span class="cursor-pointer p-2 rounded hover:bg-gray-100"
                                          title="Voir l’ordonnance"
                                          @onclick="() => Voir(ord.OrdID)">
                                        <i class="fa-regular fa-eye text-gray-500 text-xl"></i>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <Pagination TotalPages="@totalPages" CurrentPage="@currentPage" OnPageChange="LoadOrdonnances" />

        </div>
    </div>
</section>

@code {
    private List<Ordonnance> Ordonnances = new();
    private string SearchText = "";

    private int currentPage = 1;
    private int pageSize = 5;
    private int totalPages => (int)Math.Ceiling((double)FilteredOrdonnances.Count() / pageSize);

    private IEnumerable<Ordonnance> FilteredOrdonnances =>
        string.IsNullOrWhiteSpace(SearchText)
            ? Ordonnances
            : Ordonnances.Where(o =>
                o.Patient.Nom.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                o.Patient.Prenom.Contains(SearchText, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<Ordonnance> PagedOrdonnances =>
        FilteredOrdonnances.Skip((currentPage - 1) * pageSize).Take(pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadOrdonnances(currentPage);
    }

    private async Task LoadOrdonnances(int page)
    {
        currentPage = page;

        string medecinId = await JS.InvokeAsync<string>("localStorage.getItem", "userId");
        medecinId = medecinId?.Trim('"');

        Ordonnances = await OrdonnanceServices.GetOrdonnancesByMedecin(medecinId);
    }

    private void OnSearchChanged(ChangeEventArgs e)
    {
        currentPage = 1;
    }

    private async Task Send(Ordonnance ord)
    {
        if (ord.envoyee)
            return; // already sent

        bool result = await OrdonnanceServices.SendOrdonnance(ord);

        if (result)
        {
            // ✅ Update local state
            ord.envoyee = true;
            ord.Statut = Statut.EnAttente; // or whatever status makes sense

            await JS.InvokeVoidAsync(
                "showToastr",
                "success",
                "Prescription sent successfully"
            );

            StateHasChanged();
        }
        else
        {
            await JS.InvokeVoidAsync(
                "showToastr",
                "error",
                "The prescription was not sent"
            );
        }
    }

    private void Edit(int id) => Navigation.NavigateTo($"/Ordonnances/Edit/{id}");
    private void Delete(int id) => Navigation.NavigateTo($"/Ordonnances/Delete/{id}");
    private void CreerOrdonnance() => Navigation.NavigateTo("/Ordonnances/Create");
    private void Voir(int id)
     => Navigation.NavigateTo($"/Ordonnances/AffichageOrdonnance/{id}");
}