@page "/Medicaments/Delete/{id:int}"
@inject MedicamentServices MedicamentServices
@inject NavigationManager Nav


<div class="fixed inset-0 z-50 flex items-center justify-center w-full h-full bg-black bg-opacity-50">

    <div class="bg-white dark:bg-gray-700 rounded-lg shadow-md w-full max-w-md p-6 relative">
        <button @onclick="Close" class="absolute top-2 right-2 text-gray-400 hover:text-[#50bfa2]">
            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </button>
        <div class="text-center">
            <svg class="mx-auto mb-4 text-gray-400 w-12 h-12" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <h3 class="mb-5 text-lg font-normal text-gray-500">Are you sure you want to delete this medicine ?</h3>
            <button @onclick="Confirm"
                    @onmouseover="() => isHoverConfirm = true"
                    @onmouseout="() => isHoverConfirm = false"
                    style="background-color:@(isHoverConfirm ? "#95dbc8" : "#50bfa2")"
                    class="text-white px-5 py-2.5 rounded-lg text-sm font-medium mr-2">
                Yes, I'm sure
            </button>
            <button @onclick="Close" class="bg-gray-300 border px-5 py-2.5 rounded-lg  text-sm font-medium hover:bg-gray-200">
                No, cancel
            </button>
        </div>
    </div>
</div>
@code {
    [Parameter] public int id { get; set; }

    bool isHoverConfirm = false;

    private async Task Confirm()
    {
        bool result = await MedicamentServices.DeleteMedicament(id);

        if (result)
            Nav.NavigateTo("/Medicaments/ListMedicaments");
    }

    private void Close()
    {
        Nav.NavigateTo("/Medicaments/ListMedicaments");
    }
}
